extends layout

block content
  include mixins/pokemonCard
  div.container
    form(action='/' method='get')
      div.form-input
        label(for='type') By Type
        select(id='type' name='type' autocomplete='off')
          each elementType in types
            option(value=type selected=(elementType === searchType)) #{elementType}
        div.form-input
          label(for='random') Random
          input(type='checkbox' name='random' id='random' checked=searchRandom)
      button.button.save(type='submit') Filter
  div.container
    div.add-button-row
      a.button.save(href='/add') Add Pokemon Card
    each card in cardTable
      +pokemonCard(card)
